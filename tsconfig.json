{
  "compilerOptions": {
    "target": "ES2016",                                 
    "module": "CommonJS",
    "rootDir": "./",
    "allowJs": true,    
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "coverage"],
  "include": ["src"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
